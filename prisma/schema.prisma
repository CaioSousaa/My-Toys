generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id              String @id @unique @default(uuid()) 
  name            String 
  email           String @unique
  password        String
  createdAt       DateTime
  creditCard      CreditCard[]

  @@map("customer")
}

model CreditCard {
  id              String @id @unique @default(uuid()) 
  cvv             Int
  cardNumber      Int
  expirationDate  String
  addsAt          DateTime
  customer        Customer @relation(fields: [customerId], references: [id])
  customerId      String 


  @@map("creditCard")
}

model Purchase {
  id              String @id @unique @default(uuid())
  customerId      String
  productId       String
  buyAt           DateTime


  @@map("purchase")
}

model Stock {
  id              Int @id @unique @default(1)
  idProduct       String
  amountProducts  Int
  products        Product[]

  @@map("stock")
}

model Product {
  id              String @id @unique @default(uuid()) 
  name            String 
  priceInCents    Int 
  scaleHW         String
  category        ProductCategory
  description     String
  mark            String?
  stockId         Int
  stock           Stock @relation(fields: [stockId], references: [id])

  @@map("product")
}


enum ProductCategory {
  ACTION_FIGURES
  PLUSH
  BOARDS
  COLLECTABLES
  SPORTS
  KIDS
}